    <script>
        // التحكم في فتح وإغلاق نافذة التسجيل
        const joinBtn = document.getElementById('joinBtn');
        const registrationModal = document.getElementById('registrationModal');
        const closeModal = document.getElementById('closeModal');
        const registrationForm = document.getElementById('registrationForm');
        
        joinBtn.addEventListener('click', () => {
            registrationModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        });
        
        closeModal.addEventListener('click', () => {
            registrationModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });
        
        // إغلاق النافذة عند النقر خارجها
        window.addEventListener('click', (e) => {
            if (e.target === registrationModal) {
                registrationModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });
        
        // معالجة إرسال النموذج
        registrationForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // هنا يمكن إضافة التحقق من البيانات قبل الإرسال
            const formData = new FormData(this);
            
            // إرسال البيانات إلى Google Forms
            fetch(this.action, {
                method: 'POST',
                body: formData,
                mode: 'no-cors'
            }).then(() => {
                // إظهار رسالة نجاح
                alert('تم إرسال طلب التسجيل بنجاح! سنتواصل معكم قريباً.');
                registrationModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                registrationForm.reset();
            }).catch(error => {
                alert('حدث خطأ أثناء إرسال البيانات. يرجى المحاولة مرة أخرى.');
                console.error('Error:', error);
            });
        });
    </script>
